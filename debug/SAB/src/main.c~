#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <arpa/inet.h>
#include <netdb.h>

#include <stdio.h>

extern void test(void);
extern int create_socket(int (*hdl_client)(int *sockfd, struct sockaddr_in *client));
extern void close_socket(int *sockfd);

int main(int argc, char *argv[]) {
  int sockfd;

  if(argc != 2) {
    printf("Usage: %s <ip-address>\n", argv[0]);
    return 1;
  }

  sockfd = create_socket(argv[1], NULL);
  test();
  close_socket(&sockfd);
  
  return 0;
}

